<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bso.android.geometryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PersegiActivity"
            android:label="@string/persegi"/>
        <activity android:name=".PersegiPanjangActivity"
            android:label="@string/persegi_panjang"/>
        <activity android:name=".LingkaranActivity"
            android:label="@string/lingkaran"/>
        <activity android:name=".SegitigaActivity"
            android:label="@string/segitiga"></activity>
    </application>

</manifest>